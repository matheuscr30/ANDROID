<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="br.com.whatsappandroid.cursoandroid.whatsapp.activity.MainActivity">

    <include android:id="@+id/toolbarPrincipal"
        layout="@layout/toolbar" />

    <br.com.whatsappandroid.cursoandroid.whatsapp.helper.SlidingTabLayout
        android:id="@+id/stl_tabs"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/colorPrimary"
        android:fillViewport="true">

    </br.com.whatsappandroid.cursoandroid.whatsapp.helper.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_pagina"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
</LinearLayout>
