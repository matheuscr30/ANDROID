<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    tools:context="com.example.idadedecachorro.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:background="@drawable/cachorro"
            tools:layout_editor_absoluteX="142dp"
            tools:layout_editor_absoluteY="16dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="368dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/imageView"
            android:layout_marginStart="29dp"
            android:layout_marginTop="119dp"
            android:background="@android:color/holo_blue_light"
            android:padding="5dp"
            android:text="Digite a Idade do seu cachorro, para descobrir a idade dele em anos humanos"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/textoIdade"
            android:layout_width="181dp"
            android:layout_height="42dp"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="84dp"
            android:background="@android:color/background_light"
            android:ems="10"
            android:inputType="number"
            tools:layout_editor_absoluteX="102dp"
            tools:layout_editor_absoluteY="234dp" />

        <Button
            android:id="@+id/btnDescobrirIdade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textoIdade"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="@string/descobrir_idade"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="292dp" />

        <TextView
            android:id="@+id/textoResultadoIdade"
            android:layout_width="379dp"
            android:layout_height="33dp"
            android:layout_below="@+id/btnDescobrirIdade"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="26dp"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:text=""
            android:textColor="@android:color/background_light"
            tools:layout_editor_absoluteX="3dp"
            tools:layout_editor_absoluteY="369dp" />
    </RelativeLayout>
</ScrollView>

