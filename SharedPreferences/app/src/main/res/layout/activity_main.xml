<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7ec78"
    tools:context="com.example.sharedpreferences.MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textSize="24dp"
        android:text="Qual Ã© o seu nome?"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/textoNomeId"
        android:layout_alignEnd="@+id/textoNomeId" />

    <EditText
        android:id="@+id/textoNomeId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/botaoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textoNomeId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:text="Salvar" />

    <TextView
        android:id="@+id/textoResId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/botaoId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="Ola usuario nao definido" />

</RelativeLayout>
