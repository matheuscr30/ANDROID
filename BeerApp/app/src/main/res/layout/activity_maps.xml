<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/relative_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            tools:context="com.example.beerapp.MapsActivity" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/barraAlcanceRaio"
            android:layout_alignStart="@+id/imageButtonNavigationDrawer"
            android:layout_gravity="bottom|start"
            android:layout_marginBottom="14dp"
            android:layout_marginLeft="5dp"
            android:clickable="true"
            android:elevation="15dp"
            app:fabSize="normal"
            app:srcCompat="@drawable/ic_speaker_notes_white_48dp" />

        <SeekBar
            android:id="@+id/barraAlcanceRaio"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/floatingActionButton2"
            android:layout_marginBottom="41dp"
            android:layout_marginRight="5dp"
            android:max="8" />

        <ImageButton
            android:id="@+id/imageButtonNavigationDrawer"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/ic_reorder"
            android:backgroundTint="@color/colorAccent" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignEnd="@+id/barraAlcanceRaio"
            android:layout_alignTop="@+id/imageButtonNavigationDrawer"
            android:layout_marginRight="3dp"
            android:background="@drawable/ic_help_outline_white_18dp"
            android:backgroundTint="@color/colorAccent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageButtonNavigationDrawer"
            android:layout_centerHorizontal="true"
            android:text="@string/app_name"
            android:textColor="@color/colorAccent"
            android:textSize="28sp" />

    </RelativeLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/activity_main_drawer" />

</android.support.v4.widget.DrawerLayout>