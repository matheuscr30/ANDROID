<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_dark"
    tools:context="com.example.frasedodia.MainActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <Button
        android:id="@+id/botaoFrase"
        android:layout_width="267dp"
        android:layout_height="48dp"
        android:text="@string/texto_frase_dia"
        android:layout_marginTop="23dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textoNovaFrase"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/botaoFrase"
        android:layout_below="@+id/botaoFrase"
        android:layout_marginTop="23dp"
        android:text="TextView"
        android:textColor="@android:color/white"
        android:textSize="30sp" />

    </RelativeLayout>
</ScrollView>
